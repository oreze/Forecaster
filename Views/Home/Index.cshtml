@using Forecaster.Models.OpenWeather
@model Forecaster.Models.OpenWeather.GetWeather
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3">ForeCaster</h1>
    <div class="pt-2 d-flex flex-column">
        <form id="location-input-form" asp-controller="Home" asp-action="Index" method="post">
            <div class="form-group">
                <label for="location">Enter your location</label>
                <input id="location" type="text" asp-for="Location" placeholder="your city">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="mode">Choose mode</label>
                <select asp-for="Mode" id="mode" asp-items="Html.GetEnumSelectList<ModeEnum>()">
                    <option value="" hidden disabled selected>Select mode</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Index" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
